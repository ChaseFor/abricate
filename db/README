
# Resfinder
# http://cge.cbs.dtu.dk/services/data.php

# ARG-ANNOT
# http://en.mediterranee-infection.com/article.php?laref=283&titre=arg-annot-

DB="resfinder"
TITLE="Abricate Antiobiotic Resistance database (filtered ResFinder/ARG-ANNOT)"

cat *.fsa | \
	../bin/abricate-fix_resfinder_fasta - | \
	makeblastdb -out "$DB" -dbtype nucl -title "$TITLE" -logfile /dev/null -taxid 2

ls -lsa $DB.*

blastdbcmd -info -db "$DB"


